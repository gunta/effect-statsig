{
  "name": "@effect-statsig/react",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run test --config ../../vitest.config.ts",
    "test:integration": "vitest run test/**/*.integration.test.ts --config ../../vitest.config.ts --passWithNoTests"
  },
  "dependencies": {
    "@effect-statsig/browser": "workspace:*",
    "@effect-statsig/core": "workspace:*",
    "effect": "latest",
    "react": "latest"
  },
  "peerDependencies": {
    "@statsig/react-bindings": "*",
    "react": "*",
    "react-dom": "*"
  },
  "peerDependenciesMeta": {
    "@statsig/react-bindings": {
      "optional": true
    }
  }
}
